<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="fintech" transaction-type="RESOURCE_LOCAL">
	
	<provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
	
	<class>com.samanecorp.fintech.entities.UserEntity</class>
	<class>com.samanecorp.fintech.entities.DepartmentEntity</class>
	<class>com.samanecorp.fintech.entities.DeptEmployeeEntity</class>
	<class>com.samanecorp.fintech.entities.EmployeeEntity</class>
	
	<properties>
		<property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
		<property name="javax.persistence.jdbc.user" value="user"/>
		<property name="javax.persistence.jdbc.password" value="passer123@"/>
		<property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/mydatabase"/>
		
		
		<property name="hibernate.format_sql" value="true"/>
		<property name="hibernate.show_sql" value="true"/>
		<property name="hibernate.hbm2ddl" value="update"/>
	</properties>
	</persistence-unit>
	
</persistence>
